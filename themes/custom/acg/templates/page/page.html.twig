{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">
  {% embed '@acg/navbar/navbar.twig' with {
    placement: 'sticky-top-disabled',
    container: 'fixed',
    color: 'dark',
    utility_classes: ['bg-light-disabled'],
  } %}

    {% block branding %}
      {% if page.navbar_branding %}
        {{ page.navbar_branding }}
      {% endif %}
    {% endblock %}

    {% block menu %}
      {% if page.navbar_menu %}
        <div class="mr-auto">
          {{ page.navbar_menu }}
        </div>
      {% endif %}
    {% endblock %}

  {% endembed %}

  <main class="pt-5">
    {% if page.header %}
      <header class="page__header mb-3">
        <div class="container">
          {{ page.header }}
        </div>
      </header>
    {% endif %}

    {% if page.content %}
      <div class="page__content">
        <div class="container">
          {{ page.content }}
        </div>
      </div>
    {% endif %}
  </main>

  {% if page.footer %}
    <footer class="page__footer">
      <div class="container">
        <div class="d-flex justify-content-md-between align-items-md-center">
          {{ page.footer }}
        </div>
      </div>
    </footer>
  {% endif %}
</div>
